{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["message"],
  "properties": {
    "message": {
      "type": "string",
      "description": "The educational response text to display to the learner"
    },
    "signal": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "learning_checkpoint",
            "topic_completed",
            "assessment_question",
            "encouragement",
            "difficulty_adjustment",
            "observation_prompt",
            "reflection_moment",
            "practice_exercise",
            "knowledge_unlocked"
          ],
          "description": "Type of educational signal"
        },
        "data": {
          "type": "object",
          "properties": {
            "activity_type": {
              "type": "string",
              "description": "Type of aviation learning activity",
              "enum": [
                "aircraft_walkaround",
                "cockpit_tour",
                "flight_observation",
                "systems_explanation",
                "maintenance_inspection",
                "airport_tour",
                "flight_planning"
              ]
            },
            "topic_name": {
              "type": "string",
              "description": "Name of the aircraft type or aviation topic being covered"
            },
            "difficulty_level": {
              "type": "string",
              "enum": ["beginner", "intermediate", "advanced"],
              "description": "Current difficulty level"
            },
            "concept_name": {
              "type": "string",
              "description": "Specific aviation concept being taught"
            },
            "learning_objective": {
              "type": "string",
              "description": "What the learner should understand after this interaction"
            },
            "next_steps": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Suggested next learning steps"
            },
            "flight_example": {
              "type": "string",
              "description": "Flight operation example or scenario"
            },
            "assessment_criteria": {
              "type": "string",
              "description": "How to evaluate understanding"
            },
            "encouragement_type": {
              "type": "string",
              "enum": [
                "milestone_celebration",
                "progress_acknowledgment",
                "effort_recognition",
                "breakthrough_moment",
                "persistence_praise"
              ],
              "description": "Type of encouragement"
            },
            "aircraft_element": {
              "type": "string",
              "description": "Specific aircraft component or aviation system involved"
            },
            "practical_application": {
              "type": "string",
              "description": "Real-world aviation use case or operational scenario"
            },
            "common_mistake": {
              "type": "string",
              "description": "Common mistake to avoid"
            },
            "visualization_type": {
              "type": "string",
              "enum": [
                "aircraft_diagram",
                "cockpit_layout",
                "airport_diagram",
                "flight_path",
                "engine_cutaway",
                "systems_schematic"
              ],
              "description": "Type of aviation visualization to show"
            }
          }
        }
      }
    }
  }
}